{
    "name": "FACEIT Add-on",
    "manifest_version": 3,
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["https://www.faceit.com/*"],
            "css": [],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "tabs",
        "offscreen",
        "storage"
    ],
    "host_permissions": [
        "https://steamcommunity.com/"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "FACEIT Add-on Settings",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}